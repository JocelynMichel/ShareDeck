<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csid.sharedeck.InteractiveDeckActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joueur"
        android:id="@+id/joueur"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/imageDeck2"
        android:layout_alignEnd="@+id/imageDeck2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/deck"
        android:id="@+id/imageDeck2"
        android:minHeight="300dp"
        android:minWidth="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/deck"
        android:id="@+id/imageDeck"
        android:minHeight="300dp"
        android:minWidth="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Main du joueur"
        android:id="@+id/textView2"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
         />

</RelativeLayout>
